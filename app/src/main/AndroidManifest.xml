<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bakingstory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ApplicationBakingStory"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeColdStart">
        <activity
            android:name=".RecipeCollection.ActivityRecipesList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecipeDetails.BakingSteps.ActivityBakingStepsList"
            android:label="@string/app_name"
            android:parentActivityName=".RecipeCollection.ActivityRecipesList"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RecipeDetails.ActivityBakingStepDetails"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_recepieitem_detail"
            android:parentActivityName=".RecipeDetails.BakingSteps.ActivityBakingStepsList"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <service
            android:name=".WidgetIngredients.IngredientService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".WidgetIngredients.HomeWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/home_widget_info" />
        </receiver>

        <activity
            android:name=".WidgetIngredients.HomeWidgetConfigureActivity"
            android:theme="@style/AppThemeColdStart">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
    </application>

</manifest>