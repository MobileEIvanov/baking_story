<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="horizontal"
        android:showDividers="middle"
        tools:context="com.bakingstory.RecipeCollection.RecipeItemListActivity">

        <!--
        This layout is a two-pane layout for the Recepies
        master/detail flow.
        -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recipe_item_list"
            android:name="com.bakingstory.RecepieItemListFragment"
            android:layout_width="@dimen/item_width"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.bakingstory.RecipeCollection.RecipeItemListActivity"
            tools:listitem="@layout/item_recipe_list_content" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:background="@color/colorPrimary">

        </View>

        <FrameLayout
            android:id="@+id/fl_recipe_item_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

    </LinearLayout>
</layout>